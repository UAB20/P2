{% extends 'base.html.twig' %}

{% block title %}Cristea ioan-Blog-{{ post.getPostTitle() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/blog.css") }}">
{% endblock %}

{% block body %}

    <div class="container">

        <div class="post">
            <h3 class="post-title">{{ post.getPostTitle() }}</h3>

            <div class="post-meta">
                <span class="post-author">{{ post.getPostAuthor() }}</span>
                <span class="post-date">{{ post.getPostDate()|date('d M, Y') }}</span>
            </div>

            <div class="post-excerpt"><p>{{ post.getPostContent() }}</p></div>

            <div class="post-links">
                <a class="post-edit-link" href="{{ path('blog_edit_post', {'id': post.getId()}) }}">Edit</a>
                <a class="post-delete-link" href="{{ path('blog_delete_post', {'id': post.getId()}) }}">Sterge</a>
            </div>
        </div>

        <a class="post-btn post-back-link" style="margin-top: 40px;" href="{{ path('blog_first_page') }}">Inapoi</a>

    </div>

{% endblock %}